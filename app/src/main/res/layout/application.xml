<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/stu_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="学号:"/>

    <TextView
        android:id="@+id/stu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="姓名:"
        app:layout_constraintTop_toBottomOf="@id/stu_num"
        app:layout_constraintLeft_toLeftOf="@id/stu_num"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/room_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请教室:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/stu_name"
        app:layout_constraintLeft_toLeftOf="@+id/stu_name"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/app_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请日期:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/room_num"
        app:layout_constraintLeft_toLeftOf="@+id/room_num"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始时间:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/app_date"
        app:layout_constraintLeft_toLeftOf="@+id/app_date"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束时间:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/start_time"
        app:layout_constraintLeft_toLeftOf="@+id/start_time"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请用途:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/end_time"
        app:layout_constraintLeft_toLeftOf="@+id/end_time"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系电话:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/reason"
        app:layout_constraintLeft_toLeftOf="@+id/reason"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/stu_num_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/stu_num"
        app:layout_constraintBottom_toBottomOf="@id/stu_num"
        app:layout_constraintLeft_toRightOf="@+id/room_num"
        android:layout_marginLeft="30dp"
        android:inputType="number|numberDecimal"/>

    <EditText
        android:id="@+id/stu_name_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/stu_name"
        app:layout_constraintBottom_toBottomOf="@id/stu_name"
        app:layout_constraintLeft_toLeftOf="@+id/stu_num_text"/>

    <TextView
        android:id="@+id/room_num_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/room_num"
        app:layout_constraintLeft_toLeftOf="@+id/stu_num_text"
        android:text="B402"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/app_date_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/app_date"
        app:layout_constraintBottom_toBottomOf="@id/app_date"
        app:layout_constraintLeft_toLeftOf="@+id/stu_num_text"
        android:hint="格式： 20XX-XX-XX"/>

    <EditText
        android:id="@+id/start_time_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/start_time"
        app:layout_constraintBottom_toBottomOf="@id/start_time"
        app:layout_constraintLeft_toLeftOf="@+id/stu_num_text"
        android:inputType="number|numberDecimal"/>

    <EditText
        android:id="@+id/end_time_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/end_time"
        app:layout_constraintBottom_toBottomOf="@id/end_time"
        app:layout_constraintLeft_toLeftOf="@+id/stu_num_text"
        android:inputType="number|numberDecimal"/>

    <EditText
        android:id="@+id/reason_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/reason"
        app:layout_constraintBottom_toBottomOf="@id/reason"
        app:layout_constraintLeft_toLeftOf="@+id/stu_num_text"/>

    <EditText
        android:id="@+id/phone_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/phone"
        app:layout_constraintBottom_toBottomOf="@id/phone"
        app:layout_constraintLeft_toLeftOf="@+id/stu_num_text"
        android:inputType="number|numberDecimal"/>

    <Button
        android:id="@+id/cancel_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:text="取消"/>

    <Button
        android:id="@+id/confirm_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:text="确定"/>


</android.support.constraint.ConstraintLayout>